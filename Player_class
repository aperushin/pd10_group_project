class Player:

    def __init__(self, name, used_word):
        self.name = name
        self.used_word = used_word


    def receiving_used_word(self, adding_in_used_word):
        """получение количества использованных
        слов (возвращает int);
        :param
        :return int() """

        self.adding_in_used_word = adding_in_used_word
        return int(len(adding_in_used_word))


    def adding_in_used_word(self, used_word):
        """добавление слова в использованные
        слова (ничего не возвращает);
        :param
        :return None"""
        self.used_word = used_word
        used_word_list = []
        used_word_list.append(used_word)

    def examination_used_word(self, used_word, used_word_list):
        """проверка использования данного
        слова до этого (возвращает bool).
        :param
        :return bool """

        self.used_word_list = used_word_list
        for word in used_word_list:
            if used_word == word:
                return True

            else:
                return False

    def __repr__(self):
        return f'Класс отвечает за хранение имени пользователя и использованных слов'
